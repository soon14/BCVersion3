<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <com.mrice.txl.appthree.view.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="@dimen/common_size_13"
                    android:scaleType="centerCrop"
                    android:src="@drawable/head2" />


                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="未登录，点击登录"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                style="@style/horizontalLine"
                android:layout_marginTop="@dimen/common_size_10"

                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/shoucang"
                style="@style/menuItem"
                android:clickable="true"
                android:drawableLeft="@drawable/favorite"
                android:layout_marginLeft="15dp"
                android:text="   收藏"
                android:visibility="gone" />


            <View
                style="@style/line"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:background="@android:color/darker_gray" />


            <TextView
                android:id="@+id/share"
                style="@style/menuItem"
                android:clickable="true"
                android:drawableLeft="@drawable/discount"
                android:layout_marginLeft="15dp"
                android:text="   分享"
                android:visibility="visible" />




            <View
                style="@style/horizontalLine"
                android:layout_marginLeft="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/ll_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    android:id="@+id/problem"
                    style="@style/menuItem"
                    android:clickable="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/information"
                    android:text="   帮助"
                    android:visibility="visible" />


                <View
                    style="@style/horizontalLine"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/updatePassword"
                    style="@style/menuItem"
                    android:clickable="true"
                    android:drawableLeft="@drawable/survey"
                    android:layout_marginLeft="15dp"
                    android:text="   修改密码" />

                <View
                    style="@style/horizontalLine"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:id="@+id/yjfk"
                    style="@style/menuItem"
                    android:clickable="true"
                    android:drawableLeft="@drawable/comments1"
                    android:layout_marginLeft="15dp"
                    android:text="   意见反馈" />

                <View
                    style="@style/horizontalLine"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:id="@+id/banben"
                    style="@style/menuItem"
                    android:clickable="true"
                    android:drawableLeft="@drawable/attachment"
                    android:layout_marginLeft="15dp"
                    android:text="   版本" />

                <View
                    style="@style/horizontalLine"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:background="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/introduction"
                    style="@style/menuItem"
                    android:clickable="true"
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/link"
                    android:text="   关于" />


                <View
                    style="@style/line"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>
            <Button
                android:id="@+id/loginOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_margin="@dimen/common_size_15"
                android:background="@drawable/btn_topline_normal"
                android:textColor="@color/colorWhite"
                android:text="退出登录" />


        </LinearLayout>
    </ScrollView>


</layout>