<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v4.widget.SwipeRefreshLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/srl_lotterydetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mrice.jingbin.cloudreader.ui.book.child.BookCustomFragment">


        <LinearLayout
            android:id="@+id/ll_playmethod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="@color/colorTheme"
                android:textSize="16sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:descendantFocusability="afterDescendants">

                <TextView
                    android:id="@+id/playMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:background="@color/colorWhite"
                    android:lineSpacingExtra="5dp"
                    android:padding="7dp"
                    android:text=""
                    android:textColor="@color/colorTitle"
                    android:textIsSelectable="true" />
            </android.support.v7.widget.CardView>


        </LinearLayout>


    </android.support.v4.widget.SwipeRefreshLayout>


</layout>