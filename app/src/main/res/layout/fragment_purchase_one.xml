<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/common_size_4"
                android:text="模拟选号器"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/account_info_item_top" />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:background="@color/colorLine"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/rl_daletou"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_size_8"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_item_white_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/common_size_10">


                        <ImageView
                            android:id="@+id/daletou"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/icon_gc_basketball" />


                        <TextView
                            android:id="@+id/daletou_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="大乐透模拟选号"
                            android:textColor="@color/colorTheme"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/time1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="随机选号工具"
                            android:textColor="@color/colorSubtitle"
                            android:textSize="15sp" />
                        <!--android:text="每周一,三，六（20：30）开奖"-->
                        、

                        <LinearLayout
                            android:id="@+id/ll_daletou"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom|center"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/common_size_4" />


                    </LinearLayout>


                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/colorLineItem" />

                    <LinearLayout
                        android:id="@+id/rl_qxc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_size_8"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_item_white_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/common_size_10">


                        <ImageView
                            android:id="@+id/qxc"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/logo_qlc" />


                        <TextView
                            android:id="@+id/qxc_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="七乐彩模拟选号"
                            android:textColor="@color/colorTheme"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/time6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="随机选号工具"
                            android:textColor="@color/colorSubtitle"
                            android:textSize="15sp" />
                        <!--android:text="每周一,三，六（20：30）开奖"-->

                        <LinearLayout
                            android:id="@+id/ll_qxc"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom|center"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/common_size_4" />


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/line"
                    style="@style/line" />


                <View
                    android:id="@+id/middle_line"
                    style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/rl_threed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_size_8"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_item_white_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/common_size_10">


                        <ImageView
                            android:id="@+id/threed"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/icon_ks" />


                        <TextView
                            android:id="@+id/threed_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="快3模拟选号"
                            android:textColor="@color/colorTheme"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/time5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="随机选号工具"
                            android:textColor="@color/colorSubtitle"
                            android:textSize="15sp" />
                        <!--android:text="每周二,四，日（21：30）开奖"-->

                        <LinearLayout
                            android:id="@+id/ll_threed"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom|center"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/common_size_4" />


                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/colorLineItem" />

                    <LinearLayout
                        android:id="@+id/rl_kuaisan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_size_8"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_item_white_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/common_size_10">


                        <ImageButton
                            android:id="@+id/rank_kuaisan"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/icon_array3" />


                        <TextView
                            android:id="@+id/kuaisan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="排列三模拟选号"
                            android:textColor="@color/colorTheme"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/time3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="随机选号工具"
                            android:textColor="@color/colorSubtitle"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/ll_kuaisan"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom|center"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/common_size_4" />


                    </LinearLayout>
                </LinearLayout>

                <View style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/rl_rank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_size_8"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_item_white_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/common_size_10">


                        <ImageButton
                            android:id="@+id/rank_five"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/dlt3" />


                        <TextView
                            android:id="@+id/rank_five_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="排列五模拟选号"
                            android:textColor="@color/colorTheme"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="随机选号工具"
                            android:textColor="@color/colorSubtitle"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/ll_ranball"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom|center"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/common_size_4" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rl_double"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_size_8"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_item_white_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/common_size_10">


                        <ImageView
                            android:id="@+id/double_color"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/fx_ico1" />


                        <TextView
                            android:id="@+id/double_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="双色球模拟选号"
                            android:textColor="@color/colorTheme"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="随机选号工具"
                            android:textColor="@color/colorSubtitle"
                            android:textSize="15sp" />
                        <!--android:text="每周二,四，日（21：30）开奖"-->

                        <LinearLayout
                            android:id="@+id/ll_double"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom|center"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/common_size_4" />


                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/colorLineItem" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="90dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/loading_everyday" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="正在为您开启彩票推荐.."
                    android:textColor="@color/colorTitle"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="看的越多，推荐越准"
                    android:textColor="@color/colorSubtitle"
                    android:textSize="12sp"
                    android:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</layout>