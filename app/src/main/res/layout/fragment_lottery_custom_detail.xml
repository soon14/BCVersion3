<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v4.widget.SwipeRefreshLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/srl_lotterydetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mrice.jingbin.cloudreader.ui.book.child.BookCustomFragment">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/xrv_lotterydetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarFadeDuration="1"
            android:scrollbarSize="4dp"
            android:scrollbars="vertical" />


    </android.support.v4.widget.SwipeRefreshLayout>


</layout>