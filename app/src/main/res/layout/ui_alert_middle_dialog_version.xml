<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/middle_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_size_22"
    android:paddingLeft="@dimen/common_size_22"
    android:paddingRight="@dimen/common_size_22">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialog_middle_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="none"
        android:gravity="left"
        android:lineSpacingExtra="@dimen/common_size_8"
        android:maxLines="10"
        android:scrollHorizontally="false"
        android:textColor="@color/ui_alert_dialog_message_color"
        android:textSize="19sp" />
</FrameLayout>