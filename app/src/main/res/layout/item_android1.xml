<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.text.TextUtils" />

        <import type="com.mrice.txl.appthree.utils.TimeUtil" />

        <variable
            name="resultsBean"
            type="com.mrice.txl.appthree.bean.DiscoverBean.PageInfo.DiscoverCaiBean" />

    </data>


    <RelativeLayout
        android:id="@+id/ll_welfare_other"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/common_size_5"
        android:background="@drawable/commonitem_click_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_android_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_android_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_android_pic"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_android_pic"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/colorContent"
            android:textSize="16sp" />

        <!--<TextView-->
        <!--android:id="@+id/tv_android_time"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginRight="@dimen/common_size_10"-->
        <!--android:layout_marginTop="@dimen/common_size_10"-->
        <!--android:textColor="@color/colorSubtitle"-->
        <!--android:textSize="12sp" />-->
        <TextView
            android:id="@+id/tv_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_4"
            android:layout_below="@+id/tv_android_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_android_pic"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/colorSubtitle"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_android_pic"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_android_pic"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/colorSubtitle"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_android_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_android_pic"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_description"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorSubtitle"
            android:textSize="14sp" />


    </RelativeLayout>


    <!--若不使用CardView则使用此分割线-->
    <!--android:background="@color/colorLineItem"-->

</layout>
